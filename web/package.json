{
  "name": "chatviz-web",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=18.17"
  },
  "scripts": {
    "clean": "rimraf .next .turbo node_modules/.cache",
    "rebuild": "npm run clean && npm run build",
    "metrics:sai:once": "tsx -r dotenv/config scripts/compute_sai.ts",
    "metrics:baseline": "tsx -r dotenv/config scripts/roll_median_job.ts",
    "yt:watch": "tsx -r dotenv/config scripts/yt_watch.ts",
    "yt:auto": "tsx -r dotenv/config scripts/yt_auto.ts",
    "dev": "next dev -p 3001",
    "start": "next start -p 3001",
    "start:all": "concurrently -k -p \"[{name}]\" -n WEB,ANALYZE,EXPORT -c blue,green,magenta \"next dev -p 3001\" \"tsx -r dotenv/config scripts/autoAnalyze.ts\" \"tsx -r dotenv/config scripts/autoExport.ts\"",
    "start:bridge:dev": "concurrently -k -p \"[{name}]\" -n WEB,BRIDGE -c blue,green \"next dev -p 3001\" \"tsx -r dotenv/config scripts/discordBridge.ts\"",
    "start:bridge": "tsx -r dotenv/config scripts/discordBridge.ts",
    "build": "next build",
    "retrain": "tsx -r dotenv/config scripts/retrain.ts",
    "retrain:weekly": "node scripts/run-retrain-with-rollback.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "worker:analyze": "tsx -r dotenv/config scripts/autoAnalyze.ts",
    "worker:export": "tsx -r dotenv/config scripts/autoExport.ts",
    "testset": "tsx -r dotenv/config scripts/runTestset.ts",
    "prepare": "prisma generate"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.645.0",
    "@prisma/client": "^5.22.0",
    "@xenova/transformers": "^2.17.2",
    "dotenv": "^16.4.5",
    "next": "14.2.5",
    "node-cron": "^3.0.3",
    "openai": "^4.57.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "recharts": "^3.2.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "20.14.12",
    "@types/react": "18.2.73",
    "concurrently": "^9.0.1",
    "prisma": "^5.22.0",
    "rimraf": "^6.0.1",
    "tsx": "^4.20.6",
    "typescript": "5.9.2",
    "wait-on": "^9.0.1"
  }
}
